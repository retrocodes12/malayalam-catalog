{
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { "source": "/manifest.json", "destination": "/api/index" },
    { "source": "/catalog/:type/:id", "destination": "/api/index" },
    { "source": "/catalog/:type/:id.json", "destination": "/api/index" },
    { "source": "/meta/:type/:id", "destination": "/api/index" },
    { "source": "/meta/:type/:id.json", "destination": "/api/index" },
    { "source": "/", "destination": "/api/index" }
  ]
}
